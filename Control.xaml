<UserControl x:Class="OxyPlotPlugin.Control"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:OxyPlotPlugin"
			 mc:Ignorable="d"
			 xmlns:oxy="http://oxyplot.org/wpf"
			 Height="600" Width="800">
    <ScrollViewer>
        <Grid>
            <Canvas VerticalAlignment="Top">
                <Slider Maximum="99" TickPlacement="BottomRight" TickFrequency="20" IsSnapToTickEnabled="True" Width="300" Height="22" Margin="0,2"
                        Name="SL"/>
                <TextBox TextWrapping="Wrap" Text="Low 01" Width="35" Margin="302,2" Height="42" Name="TBL"/>
                <Button x:Name="scatterSeries" Content="Refresh" Width="60" Height="22" Margin="360,2" Click="ScatterSeries_Click" Visibility="{Binding OxyButVis}"
                        Background="Red" />
                <Slider  Maximum="99" TickPlacement="BottomRight" TickFrequency="20" IsSnapToTickEnabled="True" Width="300" Height="22" Margin="450,2"
                         Value="00" Name="SR"/>
                <TextBox TextWrapping="Wrap" Text="Min 99" Width="35" Margin="752,2" Height="42" Name="TBR"/>
            </Canvas>
            <GroupBox Name="plotBox" Header="OxyPlot" Margin="0,40,0,0">
                <oxy:PlotView Name="plot"/>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>
